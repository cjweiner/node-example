extends layout

block content
    .container
        h1 My Account
        p.lead Hello #{user.username}!
        if(err)
            h2 Error: #{err}
        br
        form(role="form", action="/login", method="post", style="max-width: 300px;")
            .form-group 
                input.form-control(type='text', name="email", placeholder='Email')
            .form-group
                input.form-control(type='text', name="firstname", placeholder='First Name')
            .form-group
                input.form-control(type='text', name="lastname", placeholder='Last Name')
            br
            button.btn.btn-default(type='submit') Submit
            |&nbsp;
            a(href='/')
                button.btn.btn-primary(type="button") Cancel